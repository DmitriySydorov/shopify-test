{%- assign comment = testimonial.settings -%}

<div class="card-testimonial">
    <div style="text-align:center;">
        <img
        class="testimonial-image"
        src="{{ comment.image | image_url: width: 140 }}"
        alt="{{ comment.image.alt | escape }}"
        width="70"
        height="{{ 70 | divided_by: comment.image.aspect_ratio | ceil }}"
        loading="lazy"
        >
        <h3 class="testimonial-name">{{ comment.name }}</h3>
        <span class="testimonial-date">{{ comment.date }}</span>
    </div>
    
    <div class="testimonial-content">
        <div class="rating" style="text-align: right;display: flex;align-items: center;">
            {% if comment.stars != blank %}
            {%- for i in (1..5) -%}
            <svg class="star filled {% if forloop.index > comment.stars %}half{% endif %}" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14l-5-4.87 6.91-1.01L12 2z"/></svg>
            {%- endfor -%}
            {% endif %}
            {% if comment.stars != blank %}
            <span class="reviews">{{ comment.stars }}</span>
            {% endif %}
        </div> 
      <p class="testimonial-text">"{{ comment.text }}"</p>
      
    </div>
</div>